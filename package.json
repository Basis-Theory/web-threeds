{
  "name": "@basis-theory/web-threeds",
  "version": "0.0.1",
  "repository": "https://github.com/Basis-Theory/web-threeds",
  "license": "Apache-2.0",
  "author": "Basis Theory <support@basistheory.com>",
  "source": "src/index.ts",
  "module": "dist/module/module.js",
  "main": "dist/main/index.js",
  "types": "dist/types/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "node ./scripts/prepare.js && yarn generateTypes && parcel build --no-cache",
    "build:dev": "yarn clean && yarn generateTypes && parcel build && npx size-limit",
    "clean": "rimraf dist .parcel-cache",
    "generateTypes": "tsc --emitDeclarationOnly",
    "lint-staged": "lint-staged",
    "lint:fix": "eslint --fix",
    "lint": "eslint",
    "prepare": "husky install",
    "prettier:write": "prettier --write '**/*.{ts,json}'",
    "prettier": "prettier '**/*.{ts,json}'",
    "release": "semantic-release",
    "test:coverage": "jest --coverage --passWithNoTests",
    "test:watch": "jest --watch --passWithNoTests",
    "test": "jest --passWithNoTests",
    "watch": "parcel watch"
  },
  "devDependencies": {
    "@parcel/packager-ts": "2.12.0",
    "@parcel/transformer-typescript-types": "2.12.0",
    "@size-limit/preset-small-lib": "^11.1.4",
    "@swc/core": "^1.7.10",
    "@swc/jest": "^0.2.36",
    "@types/jest": "^29.5.12",
    "@typescript-eslint/eslint-plugin": "^8.1.0",
    "@typescript-eslint/parser": "^8.1.0",
    "eslint": "^9.9.0",
    "eslint-config-get-off-my-lawn": "^7.2.0",
    "eslint-config-next": "^14.2.5",
    "eslint-config-prettier": "^9.1.0",
    "eslint-import-resolver-node": "^0.3.9",
    "eslint-import-resolver-typescript": "^3.6.1",
    "eslint-plugin-prettier": "^5.2.1",
    "husky": "^9.1.4",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "parcel": "^2.12.0",
    "prettier": "^3.3.3",
    "rimraf": "^6.0.1",
    "size-limit": "^11.1.4",
    "typescript": "^5.5.4"
  },
  "targets": {
    "main": {
      "isLibrary": true,
      "sourceMap": false
    },
    "module": {
      "isLibrary": true,
      "sourceMap": false
    },
    "types": {
      "isLibrary": true,
      "sourceMap": false
    },
    "bundle": {
      "context": "browser",
      "outputFormat": "global",
      "isLibrary": false,
      "sourceMap": false,
      "distDir": "dist/bundle",
      "optimize": true,
      "engines": {
        "browsers": "> 0.25%"
      }
    }
  },
  "alias": {},
  "resolutions": {
    "cliui": "^8.0.1"
  },
  "engines": {
    "node": ">=18.x"
  },
  "publishConfig": {
    "access": "public",
    "tag": "latest"
  },
  "size-limit": [
    {
      "path": "dist/main/index.js",
      "limit": "5 KB"
    },
    {
      "path": "dist/module/module.js",
      "limit": "5 KB"
    }
  ]
}
