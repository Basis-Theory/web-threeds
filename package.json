{
  "name": "@basis-theory/3ds-web",
  "version": "1.0.0-beta.3",
  "repository": "https://github.com/Basis-Theory/3ds-web",
  "license": "Apache-2.0",
  "author": "Basis Theory <support@basistheory.com>",
  "source": "src/index.ts",
  "module": "dist/module/module.js",
  "main": "dist/main/index.js",
  "types": "dist/types/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "node ./scripts/prepare.js && yarn generateTypes && parcel build --no-cache",
    "build:dev": "yarn clean && yarn generateTypes && parcel build && npx size-limit",
    "clean": "rimraf dist .parcel-cache",
    "generateTypes": "tsc --emitDeclarationOnly",
    "lint-staged": "lint-staged",
    "lint:fix": "eslint ./src --ext .ts --fix",
    "lint": "eslint ./src --ext .ts",
    "prepare": "husky install",
    "prettier:write": "prettier --write '**/*.{ts,json}'",
    "prettier": "prettier '**/*.{ts,json}'",
    "release": "semantic-release",
    "test:coverage": "jest --coverage --passWithNoTests",
    "test:watch": "jest --watch --passWithNoTests",
    "test": "jest --passWithNoTests",
    "watch": "parcel watch"
  },
  "devDependencies": {
    "@commitlint/cli": "^18.4.4",
    "@commitlint/config-conventional": "^18.4.4",
    "@parcel/packager-ts": "2.11.0",
    "@parcel/transformer-typescript-types": "2.11.0",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/commit-analyzer": "^11.1.0",
    "@semantic-release/exec": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/github": "^9.2.6",
    "@semantic-release/npm": "^11.0.2",
    "@semantic-release/release-notes-generator": "^12.1.0",
    "@size-limit/preset-small-lib": "^11.0.2",
    "@swc/core": "^1.3.104",
    "@swc/jest": "^0.2.30",
    "@types/jest": "^29.5.11",
    "@types/uuid": "^9.0.7",
    "@typescript-eslint/eslint-plugin": "^6.19.0",
    "@typescript-eslint/parser": "^6.19.0",
    "eslint": "^8.56.0",
    "eslint-config-get-off-my-lawn": "^7.2.0",
    "eslint-config-next": "^14.1.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-import-resolver-node": "^0.3.6",
    "eslint-import-resolver-typescript": "^3.6.1",
    "eslint-plugin-prettier": "^5.1.3",
    "husky": "^8.0.1",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.5.0",
    "parcel": "^2.11.0",
    "prettier": "^3.2.4",
    "pretty-quick": "^4.0.0",
    "rimraf": "^5.0.5",
    "semantic-release": "^23.0.0",
    "size-limit": "^11.0.2",
    "typescript": "^5.3.3",
    "uuid": "^9.0.1"
  },
  "targets": {
    "main": {
      "isLibrary": true,
      "sourceMap": false
    },
    "module": {
      "isLibrary": true,
      "sourceMap": false
    },
    "types": {
      "isLibrary": true,
      "sourceMap": false
    }
  },
  "alias": {},
  "resolutions": {},
  "engines": {
    "node": ">=18.x"
  },
  "publishConfig": {
    "access": "public"
  },
  "size-limit": [
    {
      "path": "dist/main/index.js",
      "limit": "5 KB"
    },
    {
      "path": "dist/module/module.js",
      "limit": "5 KB"
    }
  ]
}
